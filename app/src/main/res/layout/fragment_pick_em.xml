<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/loadingContainer">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/loading_ind"
            android:layout_gravity="center"
            android:id="@+id/imgLoading"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/not_found"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_feather_meh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/no_game_available"
            android:textAlignment="center"
            android:id="@+id/txtNotFoundContent"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshLayout"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:id="@+id/previewView">
                            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                                android:id="@+id/youtubePlayerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:autoPlay="false" />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/imgThumbnail"/>
                        </LinearLayout>
                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/icon_feather_chevron_left_orange"
                            android:background="@color/transparent"
                            android:id="@+id/back_arrow2"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@color/c2"
                        android:gravity="center">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Wed 22nd June"
                            android:id="@+id/txtDate"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Game Show"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_weight="1.2"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="2:20 min"
                            android:gravity="end"
                            android:id="@+id/txtTime"
                            android:textStyle="bold"
                            android:layout_marginRight="16dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Game Title"
                        android:id="@+id/txtGameTitle"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Game Title"
                        android:id="@+id/txtGameDescription"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@color/c2"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wager"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                        <com.warkiz.widget.IndicatorSeekBar
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:isb_thumb_drawable="@drawable/icon_header1"
                            app:isb_thumb_size="20dp"
                            app:isb_show_tick_texts="true"
                            app:isb_ticks_count="3"
                            app:isb_max="1000"
                            app:isb_min="100"

                            app:isb_track_background_size="80dp"
                            app:isb_track_rounded_corners="true"
                            app:isb_track_progress_size="10dp"
                            app:isb_indicator_text_color="#FFFFFF"
                            app:isb_track_background_color="#FFFFFF"
                            app:isb_tick_texts_color="#FFFFFF"
                            app:isb_track_progress_color="#FFFFFF"
                            app:isb_tick_texts_size="14sp"
                            android:id="@+id/seekBar"/>
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                style="@style/loginButton"
                                android:id="@+id/btnJoinGame"
                                android:layout_height="48dp"
                                android:text="@string/enter_game_show"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/containerList"
        android:background="@drawable/bg_splash">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_feather_chevron_left_orange"
            android:background="@color/transparent"
            android:id="@+id/back_arrow"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Show Result"
            android:layout_centerInParent="true"
            android:layout_marginVertical="24dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvListGameShow"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gameOnContainer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/c2"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Wed 22nd June"
                    android:id="@+id/txtDate2"
                    android:textStyle="bold"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Game Show"
                    android:id="@+id/txtGameName"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="1.2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2:20 min"
                    android:gravity="end"
                    android:id="@+id/txtTime2"
                    android:textStyle="bold"
                    android:layout_marginRight="14dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game On!"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/icon_feather_meh"
                        android:id="@+id/imgAva1"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name 1"
                        android:textStyle="bold"
                        android:id="@+id/txtName1"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/icon_feather_meh"
                        android:id="@+id/imgAva2"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name 1"
                        android:textStyle="bold"
                        android:id="@+id/txtName2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#6a3bc9"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waged"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_06"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_header1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textStyle="bold"
                        android:id="@+id/txtWagedPoint"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewPager"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:background="@color/c2"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    style="@style/loginButton"
                    android:id="@+id/btn1"
                    android:layout_height="48dp"
                    android:layout_width="160dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:text="@string/prev_question"/>
                <Button
                    style="@style/loginButton"
                    android:id="@+id/btn2"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/next_question"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>