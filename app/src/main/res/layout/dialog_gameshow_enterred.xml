<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:background="@drawable/alert_diag_bg">
        <TextView
            android:id="@+id/checkedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Game Show Entered!"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkedIn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:text="Congratulations, you have entered the game show. The results will get released shortly after $s. Check the main menu after this date to find out if you were a winner!"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />


        <Button
            android:id="@+id/close"
            android:layout_below="@+id/info"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            style="@style/loginButton"/>
    </RelativeLayout>

</RelativeLayout>