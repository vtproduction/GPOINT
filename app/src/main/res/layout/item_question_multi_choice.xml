<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/transparent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="22"
            android:background="@drawable/bg_05"
            android:textColor="@color/c2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:id="@+id/txtQuestionNumber"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Game Breaker Question"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="đến cuối cùng chỉ những thứ như cơm, thịt, cá, trứng, sữa cho được vào người thì mới là có giá trị :))"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"

        android:id="@+id/txtQuestionTitle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_marginVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/txtBreakerMin"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>
        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:isb_thumb_drawable="@drawable/icon_header1"
            app:isb_thumb_size="20dp"

            app:isb_track_background_size="80dp"
            app:isb_track_rounded_corners="true"
            app:isb_track_progress_size="10dp"
            app:isb_indicator_text_color="#FFFFFF"
            app:isb_track_background_color="#FFFFFF"
            app:isb_tick_texts_color="#FFFFFF"
            app:isb_track_progress_color="#FFFFFF"
            app:isb_thumb_text_color="#FFFFFF"
            app:isb_tick_texts_size="14sp"
            app:isb_progress_value_float="false"
            app:isb_show_thumb_text="true"
            app:isb_show_tick_texts="true"
            app:isb_show_indicator="none"
            app:isb_min="0"
            app:isb_max="100"
            android:id="@+id/seekBar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1000"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:id="@+id/txtBreakerMax"/>
    </LinearLayout>


</LinearLayout>