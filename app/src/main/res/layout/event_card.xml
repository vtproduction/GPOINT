<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="15dp">

    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:contentPadding="0dp"
        >
        <ImageView
            android:id="@+id/sportPic"
            android:src="@drawable/event_fallback1000"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginRight="8dp"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:paddingLeft="4dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/pointsButton"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/green_button"
            android:text="2000"
            android:textColor="#fff"
             />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/gameTitle"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minnesota vs. Purdue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/gameDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sep. 25th, 11am"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/gameLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TCF Bank Stadium"
            android:textSize="16sp" />

        <Button
            android:layout_marginTop="8dp"
            android:id="@+id/checkedIn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Check-in"
            android:textColor="#fff"
             />


    </LinearLayout>

</LinearLayout>