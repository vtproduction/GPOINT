<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"

        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="horizontal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="105dp"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/friend_request_profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_user_account" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="7dp"
                    android:textStyle="bold"
                    android:text="Jill Smith"
                    android:textColor="@color/black_transparent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"

                    android:text="7 mutual friends"
                    android:textColor="@color/colorPrimaryDark"
                    android:textFontWeight="700"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/confirmfrind"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_pick_focused"
                        android:bufferType="normal"
                        android:text="Confirm"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBottomNav" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/delete_button"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_pick_focused_graydarker"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textColor="@color/colorLightGrey" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="305dp"
            android:layout_height="0.75dp"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:background="#A3A3A3"

            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>