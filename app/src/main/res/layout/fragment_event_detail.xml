<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:id="@+id/imgHero"/>

            <include
                layout="@layout/layout_new_list_event_item"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="236dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:gravity="center"
            android:text="Hello"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="54dp"
            android:id="@+id/txtContent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:gravity="center"
            android:text="Check-in &amp; Earn"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center"
            android:background="@drawable/bg_07"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:src="@drawable/icon_header1"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="109901"
                android:textSize="43sp"
                android:id="@+id/txtPoint"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="44dp"
            android:layout_marginTop="44dp">
            <Button
                android:id="@+id/btnCheckin"
                style="@style/loginButton"
                android:width="157dp"
                android:layout_marginRight="14dp"
                android:text="Check In" />
            <Button
                android:id="@+id/btnGetTicket"
                style="@style/loginButton"
                android:layout_width="157dp"
                android:layout_marginLeft="14dp"
                android:text="Get Tickets" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>