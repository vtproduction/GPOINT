<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/dealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorUofMRed"
            android:layout_toLeftOf="@id/redeemPointsButton"
            android:paddingRight="12dp"
            android:text="Free 12' sub"/>

        <Button
            android:id="@+id/redeemPointsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/green_btn_filled_background"/>

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/redeemPointsButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dip"
            android:background="#ffdfdfdf" />

    </RelativeLayout>
