<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorUofMRed</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorControlNormal">#123123</item>
        <item name="colorControlActivated">#872162</item>
        <item name="colorControlHighlight">#331643</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
         <item name="colorPrimaryDark">@color/black_transparent</item>
         <item name="android:width">200dp</item>
         <item name="android:height">200dp</item>

    </style>

    <style name="spinnerTheme">
        <item name="android:background">@color/colorUofMRed</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="title">
        <item name="android:textColor">#ff7a0019</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="AppTheme.HiddenTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>
    <!-- ActionBar styles -->
    <style name="TransparentActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonHOLO" parent="AppTheme">
        <item name="android:textColorPrimary">#d84315</item>
        <item name="colorAccent">#0288d1</item>
        <item name="android:colorControlNormal">#f9a825</item>
        <item name="android:colorControlHighlight">#880e4f</item>
        <item name="android:colorButtonNormal">#b9f6ca</item>
    </style>

    <style name="AppTheme.NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
    </style>

    <style name="AppTheme.flatToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!--flat elevation color-->
        <item name="android:elevation">0dp</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
    </style>

    <style name="Search" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">


        <item name="android:colorControlNormal">#000000</item>
        <item name="android:colorControlActivated">#000000</item>
<!--        gray color #848488-->
        <item name="android:queryHint">Search</item>

        <item name="android:backgroundTint">#efeff0</item>
        <item name="android:background">@drawable/bg_pick_focused_gray</item>

    </style>


    <style name="loginButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#FF9A2C</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="loginButton_outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">#FF9A2C</item>
        <item name="strokeColor">#FF9A2c</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="loginTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#FF9A2C</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="inputHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textHintColor</item>
        <item name="android:textStyle">bold</item>
        <!-- your custom attributes -->
    </style>

    <item name="dialog_min_width_major" type="dimen">65%</item>
    <item name="dialog_min_width_minor" type="dimen">95%</item>
</resources>
